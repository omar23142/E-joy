{
    "manifest_version": 3,
    "name": "E-Joy Clone Translator",
    "version": "1.0",
    "description": "Translate English to Arabic and save your vocabulary list.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ]
}